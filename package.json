{
  "name": "vscode-lc3-tools",
  "displayName": "LC3 Assembly",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-lc3-tools.assemble",
        "title": "Assemble current file"
      },
      {
        "command": "vscode-lc3-tools.run",
        "title": "Assemble and Run current file"
      }
    ],
    "languages": [
      {
        "id": "lc3asm",
        "aliases": [
          "LC3 Assembly",
          "asm",
          "lc3asm"
        ],
        "extensions": [
          ".asm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lc3asm",
        "scopeName": "source.asm",
        "path": "./syntaxes/asm.tmLanguage.json"
      }
    ],
    "colors": [
      {
        "id": "lc3asm.register.r1",
        "description": "Color for R1",
        "defaults": {
          "dark": "#0080ff",
          "light": "errorForeground",
          "highContrast": "#010203",
          "highContrastLight": "#feedc3"
        }
      },
      {
        "id": "lc3asm.register.r2",
        "description": "Color for R1",
        "defaults": {
          "dark": "errorForeground",
          "light": "errorForeground",
          "highContrast": "#010203",
          "highContrastLight": "#feedc3"
        }
      },
      {
        "id": "lc3asm.register.r3",
        "description": "Color for R1",
        "defaults": {
          "dark": "errorForeground",
          "light": "errorForeground",
          "highContrast": "#010203",
          "highContrastLight": "#feedc3"
        }
      },
      {
        "id": "lc3asm.register.r4",
        "description": "Color for R1",
        "defaults": {
          "dark": "errorForeground",
          "light": "errorForeground",
          "highContrast": "#010203",
          "highContrastLight": "#feedc3"
        }
      },
      {
        "id": "lc3asm.register.r5",
        "description": "Color for R1",
        "defaults": {
          "dark": "errorForeground",
          "light": "errorForeground",
          "highContrast": "#010203",
          "highContrastLight": "#feedc3"
        }
      },
      {
        "id": "lc3asm.register.r6",
        "description": "Color for R1",
        "defaults": {
          "dark": "errorForeground",
          "light": "errorForeground",
          "highContrast": "#010203",
          "highContrastLight": "#feedc3"
        }
      },
      {
        "id": "lc3asm.register.r7",
        "description": "Color for R1",
        "defaults": {
          "dark": "errorForeground",
          "light": "errorForeground",
          "highContrast": "#010203",
          "highContrastLight": "#feedc3"
        }
      }
    ],
    "snippets": [
      {
        "language": "lc3asm",
        "path": "./snippets/lc3asm.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.31",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.4.5"
  }
}
